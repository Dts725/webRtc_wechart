
/*mask*/
.drawer_screen {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 1000;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
}
 
/*content*/
.drawer_box {
  width: 650rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 1001;
  background: #FAFAFA;
  margin: -150px 50rpx 0 50rpx;
  border-radius: 3px;
  color: #000;
}
 
.drawer_box .drawer_title{
  padding:4.68vw;
  font: 6.25vw "microsoft yahei";
  text-align: center;
}
.drawer_box .drawer_content {
  height: 65.625vw;
  overflow-y: scroll; /*超出父盒子高度可滚动*/
  display: flex;
  flex-wrap: wrap;
}
 .draw_screen_btn{
   padding: 3.125vw;
   font: 6.25vw "microsoft yahei";
   border-top: 1px solid #E8E8EA;
   display: flex;
   justify-content: space-around
 }
.btn_ok{
  color: #3CC51F;
}
.btn_cancel{
  color: #EC3803
}
.drawer_box .top{
	padding-top:2.5vw;
}
.drawer_box .bottom {
	padding-bottom:2.5vw;
}
.drawer_box .title {
	height: 9.4vw;
	line-height: 9.4vw;
	width: 160rpx;
	text-align: center;
	display: inline-block;
	font: 300 28rpx/30px "microsoft yahei";
}
.drawer_box .grid{
   width: 25vw;
   height: 25vw;
   margin-left: 3vw;
   position: relative;
   margin-bottom: 1vw;
}
.drawer_box .grid image{
  display: block;
  width: 100%;
  height: 100%;
  object-fit: cover;
  object-position: center;
  
}
.grid-delete{
   position: absolute;
   width: 24px;
   height: 24px;
   top: 0;
   right: 0;
   
}
.drawer_input{
  height: 30vw;
}
.drawer_input-views{
   width: 90%;
   margin: auto;
  font: 5vw "microsoft yahei";
}
.drawer_input-input{
  border: 1px solid #eee;
  width: 90%;
  margin: auto;
  padding: 2vw 0;
  margin-top: 5vw
}