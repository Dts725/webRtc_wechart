/* card_live_video.wxss */
/* 总体设置 */
.card{
  width: 100%;
  min-height: 2rem;
  background-color: #fff;
  margin-bottom: 10px;
  padding:10px 0;
}
/* 缩略图 */
.card .thumbnails {
  width:30%;
  height: 110px;
}
/* 右边部分 */
.c-right{
  float:right;
  width:67%;
  font-size:14px;
  margin-top: 0.05rem
}
/* 文章标题+时间 */
.c-Overall-title{
  width:70%;
}
.c-Overall-title:after{
  /*清除浮动*/
  display: block;
  clear: both;
  content: "";
}
/* 标题 */
.c-partial-title{
    text-align: left;
    width:100%;
    font-size:18px;
    white-space:nowrap;
    text-overflow:ellipsis; 
    overflow: hidden;
}
/* 时间 */
.c-partial-time{
  text-align: left;
  width:50%;
  float:left;
  color: #999;
}
/* 观看次数 */
.c-partial-click{
  width:30%;
  float:right;
  color: #999;
  text-align: left
}
/* 小图标 */
.small-icon{
    width:16px;
    height:16px;
    margin-top:2px;
}
/* 文章内容 */
.c-content{
  text-align: left;
  color: #666;
  font-size:14px;
  margin-top:10px;
  line-height:1.2rem;
  width:98%;
  text-overflow: -o-ellipsis-lastline;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2; 
  -webkit-box-orient: vertical;
}
