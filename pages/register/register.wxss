/* pages/register/register.wxss */
view{
  overflow: visible;
}
.topPic {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 150rpx;
}

.pic {
  width: 100px;
  height: 100px;
  border-radius: 50%;
}

.form-content {
  margin: 1rem 50rpx 2rem;
}

.form-icon {
  /* position: absolute; */
  /* top: 50%; */
  /* margin-top: -25rpx; */
  height: 50rpx;
  width: 50rpx;
  /* line-height: 1; */
}

.name, .card, .phone, .code, .party {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #aaa;
}
.party-select{
  display: flex;
  justify-content: space-around;
  align-items: center;
  overflow: hidden;
  
}
.party-fulled{
  color: #000;
}
.party-empty{
 color: grey;
}
.icon-wrapper {
  /* position: relative; */
  height: 50rpx
}

.submit-btn {
  background-color: #a51e22;
  border-radius: 60rpx;
  color: #fff;
}

/************改写weui样式***********************/

.weui-input {
  margin-left: 60rpx;
}

.weui-vcode-btn {
  font-size: 18px;
}

.newBtn {
  color: #aaa;
}

/************************** 顶部拍摄头像 ******************************/

.apr-cards {
  width: 100%;
  box-sizing: border-box;
  padding: 1rem 2rem 0;
}

.apr-cards-photo {
  width: 100%;
  display: flex;
  justify-content: center;
  box-sizing: border-box;
  padding: 1rem 0 0;
}

.card-info {
  font-size: 15px;
  color: #888;
  text-align: center;
}

.weui-uploader__input-box {
  /* width: 6rem;
  height: 8rem; */
  margin: 0;
}

.card-img {
  width: 6rem;
  height: 8rem;
  border: 1px solid #ddd;
  border-radius: 0.5rem;
}
