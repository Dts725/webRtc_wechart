/* pages/onlineElection/main/main.js.wxss */

.button {
  background-color: transparent;
  opacity: 0.6;
  width: 40px;
  /* padding: 5px; */
  /* height: 1em; */
  /* line-height: 100%; */
  /* text-align: center; */
  position: absolute;
  top: 40%;
  left: 85%;
  z-index: 101;
}
.button image{
	width:4.5vh;
	height:4.5vh;
}

.mov {
  height: 70vh;
  width: 100%;
  background-color: rgba(red, green, blue, 0.2);
}

/* flow 流程菜单 ↓ */

.flow-menu{
	transition: left 0.4s ease-in;
	min-width: 50%;
	height: 100%;
	background-color: #2334a8;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 100;
	color: #fff;
	box-sizing: border-box;
	padding:2vh;
	font-size:2.5vh;
	z-index:10000;
}
.flow-menu .row{
	padding:0.8vh 0;
}
.flow-menu .flow-li{
	display:flex;
	align-items:center;
}
.flow-menu .flow-li-icon{
	width:3vh;
	height:3vh;
	display:inline-block;
	margin-right:1vh;
}
.flow-menu .flow-li-text{
	display:inline-block;
}

.flow-title {
  font-size: 4vh;
  line-height: 15vh;
}

.meeting-body {
  transition: all 0.45s ease-in;
  position: relative;
  top: 0;
  left: 50%;

}
.meeting-hide {
  transition: all 0.4s ease-in;
  position: relative;
  top: 0;
  left: 0%;
}

.row {
  display: flex;
  justify-content: space-between;
}

/* flow 流程菜单 ↑ */

/** 内容展示区域 ↓ **/
.mt-con{
	width:100%;
	height:100%;
	position: absolute;
	top:0;
	left:0;
	z-index:0;
}
.mt-con .mt-flow-btn-sign{
	position: absolute;
	top:20%;
	left: 50%;
}
.mt-con .mt-con-tip{
	text-align:center;
	width:100%;
	display:block;
	line-height:10vh;
	color:#fff;
	font-size:3vh;
}
.mt-con .mt-con-sign button{
	width:60%;
	background-color:#67c23a;
	color:#fff;
}
/* 签到统计 */
.mt-con .mt-con-sign-result-title{
	font-size: 3vh;
	line-height:15vh;
	color:#428BFA;
	text-align:center;
	font-weight:bold;
}
.mt-con-sign-result-con{
	display: flex;
	justify-content: space-around;
}
.mt-con-sign-result-wraper{
	color:#888;
	text-align:center;
	position: relative;
	width:14vh;
	height:14vh;
	display:flex;
	flex-direction: column;
	/* align-items: center; */
	justify-content:center;
}
.mt-con-sign-result-wraper image{
	position: absolute;
	z-index:-1;
	top:50%;
	left: 50%;
	width:14vh;
	height:14vh;
	transform:translate(-50%,-57%);
}
.mt-con-sign-result-wraper p{
	display: block;
	font-weight:bold;
	font-size:2vh;
}

.mt-con-sign-result-wraper p strong{
	font-size:3vh;
}
	
/******************* tab 切换的 ↓ *******************/
.mt-con .weui-navbar{
	background-color:#D9EBFF;
}
.mt-con .weui-navbar .weui-navbar__item{
	padding:1.5vh 0;
	border-top-left-radius:1.5vh;
	border-top-right-radius:1.5vh;
}
.mt-con .weui-bar__item_on{
	/* background-color:#5194FD; */
	background-color:#a6e3ff;
	/* color:#409eff; */
	color:#0DAA27;
}
/* 滑动条  */
.mt-con .weui-navbar__slider {
  width: 50%;
  background-color: #0DAA27;
  font-weight:bold;
}
/******************* tab 切换的 ↑ *******************/

/* 2-7流程的内容部分 */
.mt-con .mt-con-content{
	width:100%;
	height:100%;
	position:absoulte;
	top:0;
}

/** 内容展示区域 ↑ **/

.red{
	color:#EA4748;
}
.blue{
	color:#51A0FF;
}
.green{
	color:#04C96F;
}