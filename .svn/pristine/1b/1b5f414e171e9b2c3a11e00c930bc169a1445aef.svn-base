/* pages/onlineElection/main/main.js.wxss */

.button {
  background-color: transparent;
  opacity: 0.6;
  width: 40px;
  /* padding: 5px; */
  /* height: 1em; */
  /* line-height: 100%; */
  /* text-align: center; */
  position: absolute;
  top: 40%;
  left: 85%;
  z-index: 101;
}
.button image{
	width:4.5vh;
	height:4.5vh;
}

.mov {
  height: 70vh;
  width: 100%;
  background-color: rgba(red, green, blue, 0.2);
}

/* flow 流程菜单 ↓ */

.flow-menu{
	transition: left 0.4s ease-in;
	min-width: 50%;
	height: 100%;
	background-color: #2334a8;
	position: absolute;
	top: 0;
	left: 0;
	z-index: 100;
	color: #fff;
	box-sizing: border-box;
	padding:2vh;
	font-size:2.5vh;
	z-index:10000;
}
.flow-menu .row{
	padding:0.8vh 0;
}
.flow-menu .flow-li{
	display:flex;
	align-items:center;
}
.flow-menu .flow-li-icon{
	width:3vh;
	height:3vh;
	display:inline-block;
	margin-right:1vh;
}
.flow-menu .flow-li-text{
	display:inline-block;
}

.flow-title {
  font-size: 4vh;
  line-height: 15vh;
}

.meeting-body {
  transition: all 0.45s ease-in;
  position: relative;
  top: 0;
  left: 50%;

}
.meeting-hide {
  transition: all 0.4s ease-in;
  position: relative;
  top: 0;
  left: 0%;
}

.row {
  display: flex;
  justify-content: space-between;
}

/* flow 流程菜单 ↑ */

/** 内容展示区域 ↓ **/
.mt-con{
	width:100%;
	height:100%;
	position: absolute;
	top:0;
	left:0;
	z-index:0;
	box-sizing:border-box;
	padding:2vh;
}
.mt-con .mt-flow-btn-sign{
	position: absolute;
	top:20%;
	left: 50%;
}
.mt-con .mt-con-tip{
	/* text-align:center; */
	width:100%;
	display:block;
	line-height:10vh;
	color:#fff;
	font-size:3vh;
}
.mt-con .mt-con-sign button{
	width:60%;
	background-color:#67c23a;
	color:#fff;
}
/**************** 签到统计 ↓ ****************/
.mt-con .mt-con-sign-result-title{
	font-size: 3vh;
	line-height:15vh;
	color:#428BFA;
	text-align:center;
	font-weight:bold;
}
.mt-con-sign-result-con{
	display: flex;
	justify-content: space-around;
}
.mt-con-sign-result-wraper{
	color:#888;
	text-align:center;
	position: relative;
	width:14vh;
	height:14vh;
	display:flex;
	flex-direction: column;
	/* align-items: center; */
	justify-content:center;
}
.mt-con-sign-result-wraper image{
	position: absolute;
	z-index:-1;
	top:50%;
	left: 50%;
	width:14vh;
	height:14vh;
	transform:translate(-50%,-57%);
}
.mt-con-sign-result-wraper p{
	display: block;
	font-weight:bold;
	font-size:2vh;
}

.mt-con-sign-result-wraper p strong{
	font-size:3vh;
}
/**************** 签到统计 ↑ ****************/

/**************** 候选人介绍 投票 ↓ ****************/
.mt-flow-con-4, .mt-flow-con-8{
	width:100%;
	height:100%;
}
.mt-flow-con-tip{
	width:100%;
	display:block;
	font-size:3vh;
	margin:0.5vh 0;
	font-weight:bold;
}
.mt-flow-con-tip-vice{
	color:#A1A1A1;
}
.mt-flow-wraper{
	display: flex;
	justify-content: space-between;
	align-items: center;
	/* width:100%; */
	/* height:8vh; */
	height:auto;
	line-height:4vh;
	padding:2vh;
	border:1px solid #ddd;
	border-radius:1vh;
	/* box-shadow:0 0.3vh 0.5vh #aaa; */
	margin-bottom:1vh;
	color:#A1A1A1;
}
 .mt-flow-wraper-left, .mt-flow-wraper-right{
	disply:flex;
	justify-content: space-between;
	align-items:center;
	/* height: 8vh; */
	overflow: visible;
 }

.mt-flow-wraper image{
	width:2.5vh;
	height:2.5vh;
	margin:0 2vh 0 1vh;
}
.mt-flow-name, .mt-flow-wraper-right text{
	font-weight: bold;
	font-size:2.2vh;
	color:#000;
}
.mt-flow-age{
	margin-left:1vh;
}
.mt-flow-wraper-right text{
	color:#509EFF;
}
/* 投票 */
.mt-flow-con-8-wraper{
	border:1px solid #ddd;
	/* border-radius:1vh; */
	/* border-bottom-left-radius:0; */
	/* border-bottom-right-radius:0; */
	border-top-left-radius:0;
	border-top-right-radius:0;
	padding:0.5vh 2vh 0.5vh 0;
	margin-top:1vh;
}
.mt-flow-con-8 .mt-flow-wraper{
	border:none;
	border-bottom:1px dashed #ddd;
	padding:2vh 0;
}
.mt-flow-con-8 .mt-flow-wraper:last-child{
	border:none;
}
.mt-flow-con-8 .mt-flow-wraper image{
	margin:0 1vh;
}
.mt-flow-con-8 .mt-flow-wraper .mt-flow-age{
	margin:0;
}
.mt-flow-wraper-identity{
	display:inline-block;
	/* width:6vh; */
	min-width:2rem;
	padding:0 2vh 0 0.5vh;
	border-top-right-radius:3vh;
	border-bottom-right-radius:3vh;
	margin-right:2vh;
	color:#fff;

}
/* 我要投票按钮 */
.mt-flow-btn-border{
	color:#509EFF;
	border:1px solid #509EFF;
	border-bottom:none;
	border-radius:10vh;
	font-size:1.5vh;
	padding:0.5vh 2vh;
	margin-right:2vh;
}
/* 另选他人 */
.mt-flow-select-other-wraper{
	border:1px solid #ddd;
	/* border-radius:1vh; */
	border-top:none;
	border-bottom-left-radius:1vh;
	border-bottom-right-radius:1vh;
	padding:0.5vh 2vh 0.5vh 0;
}
	
